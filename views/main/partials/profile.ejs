<div class="container my-5">
  <!-- Profile Header -->
  <div class="card mb-4">
    <div class="card-body d-flex align-items-center gap-3">
      <img id="profile-avatar"
           src="<%= avatarUrl || '/uploads/avatars/placeholder.png' %>"
           alt="<%= username %>"
           class="rounded-circle"
           width="80" height="80">

      <div>
        <h4 class="mb-0"><%= username %></h4>
        <p class="text-muted mb-0"><%= email %></p>

        <!-- Change avatar button + hidden file input -->
        <button id="change-avatar-btn" class="btn btn-sm btn-primary mt-2">Change Avatar</button>
        <input type="file" id="avatar-input" accept="image/png, image/jpeg, image/webp" style="display:none">
      </div>
    </div>
  </div>

  <!-- Friends Section -->
  <div class="card">
    <div class="card-header d-flex align-items-center gap-2">
      <i class="bi bi-people-fill"></i>
      <span>Friends</span>
      <span class="badge text-bg-secondary ms-auto"><%= friends.length %></span>
    </div>
    <ul class="list-group list-group-flush">
      <% if (friends && friends.length) { %>
        <% friends.forEach(friend => { %>
          <li class="list-group-item d-flex align-items-center gap-3">
            <img src="<%= friend.avatarUrl || '/uploads/avatars/placeholder.png' %>"
                 alt="<%= friend.username %>"
                 class="rounded-circle"
                 width="40" height="40">
            <%= friend.username %>
          </li>
        <% }) %>
      <% } else { %>
        <li class="list-group-item text-muted">No friends yet</li>
      <% } %>
    </ul>
  </div>
</div>

<script type="module" src="/contentWindow/profile.js"></script>