  <hr class="side-nav-hr" />
  <ul class="side-nav-list">
    <li class="side-nav-list-item">
      <h4 class="side-list-title">
        Groups
        <i class="bi bi-people"></i>
      </h4>
    </li>
    <% gList.forEach(g => { %>
    <li class="side-nav-list-item side-nav-group-list-item">
      <button id="<%= g.groupName %>" class="side-nav-option side-nav-group">
        <img
          class="side-nav-option-img"
          src="/images/team-placeholder.png"
          alt="group icon"
        />
        <span class="side-nav-option-name"
          ><%= g.displayName || g.groupName %></span
        >
      </button>
    </li>
